# Hosting Platform - Homelab Development Environment
# Copy this file to .env and update with your values

# PostgreSQL Configuration
POSTGRES_USER=hosting_dev
POSTGRES_PASSWORD=change_this_password_in_production
POSTGRES_DB=hosting_platform

# Redis Configuration
REDIS_PASSWORD=change_this_redis_password

# n8n Configuration
N8N_USER=admin
N8N_PASSWORD=change_this_n8n_password
N8N_HOST=localhost
N8N_DB=n8n

# Grafana Configuration
GRAFANA_USER=admin
GRAFANA_PASSWORD=change_this_grafana_password

# Application Configuration (for your services)
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
API_GATEWAY_PORT=8080
USER_SERVICE_PORT=8081
BILLING_SERVICE_PORT=8082
PROVISIONING_SERVICE_PORT=8083
EMAIL_SERVICE_PORT=8084

# SMTP Configuration (for email sending)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# Stripe Configuration (use test keys in development)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Environment
NODE_ENV=development
RUST_LOG=debug
GO_ENV=development
